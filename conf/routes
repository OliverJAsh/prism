# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# API
GET        /instances            controllers.Api.instanceList
GET        /instances/:id        controllers.Api.instance(id)
GET        /apps                 controllers.Api.appList
GET        /apps/:id             controllers.Api.app(id)
GET        /stacks               controllers.Api.stackList
GET        /stacks/:id           controllers.Api.stack(id)
GET        /roles                controllers.Api.roleList
GET        /mainclasses          controllers.Api.mainclassList

# Web GUI
GET        /                     controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.at(path="/public", file)
